\begin{tabular}{c|c|c|c||c}
$X \backslash Y$ & -1 & 0 & 1 & $P(X=x)$ \\ \hline
-1 & 2/6 & 0 & 1/6 & 1/2 \\ \hline
1 & 1/6 & 1/6 & 1/6 & 1/2 \\ \hline \hline
$P(Y=y)$ & 1/2 & 1/6 & 1/3
\end{tabular}
